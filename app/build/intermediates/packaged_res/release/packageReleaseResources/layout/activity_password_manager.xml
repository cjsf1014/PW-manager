<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="P W manager 密码管理器"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 主密码输入 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主密码:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/masterPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入主密码"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <!-- 网站/应用名称 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网站/应用名称:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/siteNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="例如: google.com"
        android:layout_marginBottom="16dp" />

    <!-- 用户名 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名/邮箱:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入用户名或邮箱"
        android:layout_marginBottom="16dp" />

    <!-- 密码 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存密码"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/loadButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看密码"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- 显示保存的密码 -->
    <TextView
        android:id="@+id/savedPasswordsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存的密码将在这里显示"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:background="#f0f0f0" />

</LinearLayout>
