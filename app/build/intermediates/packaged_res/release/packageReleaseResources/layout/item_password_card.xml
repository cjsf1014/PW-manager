<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Site Name and Copy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/siteNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="网站/应用名称"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary" />

            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_content_copy"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/textColorSecondary"
                android:contentDescription="复制" />

            <CheckBox
                android:id="@+id/selectCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:contentDescription="选择"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"
            android:layout_marginBottom="16dp"
            android:alpha="0.5" />

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_person"
                app:tint="@color/textColorSecondary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名/邮箱"
                android:textSize="14sp"
                android:textColor="@color/textColorPrimary" />

        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock"
                app:tint="@color/textColorSecondary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/passwordTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="••••••••"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="@color/textColorPrimary" />

            <ImageButton
                android:id="@+id/togglePasswordButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_visibility"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/textColorSecondary"
                android:contentDescription="切换显示" />

        </LinearLayout>

        <!-- Note -->
        <LinearLayout
            android:id="@+id/noteContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_note"
                app:tint="@color/textColorSecondary"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/noteTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="备注"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/colorPrimary"
                android:drawableStart="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorPrimary"
                android:padding="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/colorError"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorError"
                android:padding="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
